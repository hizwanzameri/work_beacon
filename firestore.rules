rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Staff incidents collection - allow all CRUD operations for authenticated users
    match /staff_incidents/{incidentId} {
      allow read, write: if request.auth != null;
    }
    
    // Alerts collection - allow authenticated users to read, admins to write
    match /alerts/{alertId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Staff profiles collection - allow users to read/update their own profile
    match /staff_profiles/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Prevent deletion of profiles
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

